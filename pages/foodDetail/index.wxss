/* pages/foodDetail/index.wxss */

.page {
  background-color: white;
  padding-bottom: 20px;
  position:absolute;
  top:720rpx;
  border-top-left-radius:30rpx;
  border-top-right-radius:30rpx;
  width: 100%;
}

.full-width-image {
  width: 100%;
}

.food-card {
  background-color: white;
  margin: 16rpx 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;

  box-shadow:0 4rpx 8rpx 0 rgba(0,0,0,0.10);
  border-radius:12rpx;
}

.header {
  border:2rpx solid #c9cacb;
  border-radius:200rpx;
  width:680rpx;
  height:90rpx;

  
  left:0;
  right:0;
  margin-left: auto;
  margin-right: auto;
  margin-top: 60rpx;

}

.ingredient-area {
  border-top:1rpx solid #f8f8f8;
}

.ingredient-area-style {
  display:flex;
  flex-direction:column;
  margin:28rpx 62rpx;
}

.header-text {
  height:90rpx;

  font-family:PingFangSC-Regular;
  font-size:28rpx;
  color:#888888;
  letter-spacing:0.16rpx;
  display:flex;
  align-items:center;
  margin-left:32rpx;
}

.intaken-layout {
  padding: 26rpx 64rpx;
  display: flex;
  flex-direction: space-between;
  justify-content: space-between;
  align-items: center;
  border-bottom:1rpx solid #f8f8f8;
}

.ingredient-row {
  padding: 0px 40rpx;
  display: flex;
  flex-direction: space-between;
  justify-content: space-between;
  align-items: center;
}

.food-name-row {
  width: 620rpx;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  display: flex;
  flex-direction: space-between;
  justify-content: space-between;
  align-items: center;
}

.ingredient-name {
  display: flex;
  justify-content: space-between;
  align-items:center;
  margin-bottom: 20rpx;
}

.padding-title {
  padding: 20rpx 60rpx;
}

.editing-area {
  display: flex;
  flex-direction: row-reverse;
}

.portion-area {
  display: flex;
  flex-direction: row;
  margin-left:32rpx;
  margin-right:32rpx;
  margin-top: 16rpx;
  margin-bottom: 30rpx;
  align-items: center;
}

.small-icon {
  width: 50rpx;
  height: 50rpx;
}

.left-round-corner-view {
  width: 22vw;
  height: 94rpx;
  border-style: solid;
  border-color: #c9cacb;
  border-width: 1rpx 1rpx 1rpx 1rpx;
  border-radius: 0px;
  border-bottom-left-radius: 50rpx;
  border-top-left-radius: 50rpx;
  align-items: center;
}


.right-round-corner-view {
  width: 453rpx;
  height: 94rpx;
  border-style: solid;
  border-color: #c9cacb;
  border-width: 1rpx 1rpx 1rpx 1rpx;
  border-radius: 0px;
  border-bottom-right-radius: 50rpx;
  border-top-right-radius: 50rpx;
  align-items: center;
}

.show-more-view {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx;

}

.ingredient-input {
  width:140rpx;
  padding:20rpx;
  margin: 20rpx;
  border-style: solid;
  border-color: gray;
  border-width: 1rpx 1rpx 1rpx 1rpx;
  border-radius: 60px;
}

.add-more-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  border:2rpx solid #f7f7f7;
}

.amount-input {
  width: 120rpx;
  height: 46rpx;
  padding: 22rpx 20rpx;
  text-align: center;

  font-family:PingFangSC-Regular;
  font-size:28rpx;
  color:#353535;
  letter-spacing:0.22rpx;
}

.portion-selector-text {
  height: 94rpx;
  padding: 28rpx 38rpx;

  font-size: 28rpx;

  color: black;
  text-align: center;
  align-items: center;
}

.energy-weight-data-row {
  margin-top: 2rpx;
  margin-bottom: 2rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
}

.confirm-btn {
  margin:40rpx 32rpx;
  background-color:#f3465a;
  border-radius:20rpx;
  height:114rpx;

  font-family:PingFangSC-Regular;
  font-size:36rpx;
  color:#ffffff;
  letter-spacing:0.14rpx;

  display: flex;
  align-items: center;
  justify-content: center;
}

.intaken-value {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.record-number {
  font-family:PingFangSC-Regular;
  font-size:40rpx;
  color:#353535;
}

.share-layout {
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}