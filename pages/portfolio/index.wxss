/* pages/portfolio/index.wxss */
@import "../../style/weui.wxss";

page{
  background-color: #f8f8f8;
}

.picker{
    padding: 10px;
    background-color: white;
}

.section {
    margin-top: 20px;
}

.section-arrow {
  display: flex;
  background-color: white;
  margin-top: 5px;
  margin-bottom: 5px;
  height: 50px;
  align-items: center;
}

.right-arrow-img {
  float: right;
  position: absolute;
  right: 0;
  margin-right: 15px;
}

.input-view {
    width:200px;
    margin-left: 10px;
}
.blank-view {
   margin-left: 10px;
}

.userinfo-avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.space-between-view {
  width: 90vw;
  display:flex;
  flex-direction: space-between;
  align-items:center;
  justify-content: space-between;
}

.right-align-input {
  align-items: right;
}

.error-red-border {
  z-index: 999;
  border: 1px solid red;
}

.space-between-view {
  margin-left: 4rpx !important;
  margin-right: 0rpx !important;
}

.bg {
  position: absolute;
  top: 0%;
  bottom: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.3;
  opacity: 0.30;
  filter: alpha(opacity=30);
}