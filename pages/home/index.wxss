/* pages/home/index.wxss */

.page{
  background-color: white;
}

.portrait_view {
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.column_view{
  display:flex;
  flex-direction: column;
  height: 110rpx;
  justify-content: center;
}

.nutriton_tab {
  display:flex;
  flex-direction: column;
  width: 686rpx;
  height: 394rpx;
  left:0;
  right:0;
  margin-left: auto;
  margin-right: auto;
}

.nutriton_chart {
  height: 200rpx;
}

.title_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 34rpx;
  margin-left: 32rpx;
  margin-bottom: 20rpx;
}

.title_text{
  font-family:PingFangSC-Medium;
  font-size:34rpx;
  color:#000000;
  text-align:left;
}

.feature_title-text {
  font-family:PingFangSC-Regular;
  font-size:28rpx;
  color:#353535;
  letter-spacing:0.26rpx;
  text-align:left;
}

.feature_desc-text {
  font-family:PingFangSC-Regular;
  font-size:24rpx;
  color:#888888;
  letter-spacing:0.22rpx;
  text-align:left;
}

.desc_text {
  color:#888888;
  font-size: 28rpx;
}


.space-between-view{
  margin: 0px 32rpx;
  display: flex;
  flex-direction: space-between;
  justify-content: space-between;
}

.card {
  box-shadow:0 4rpx 34rpx 0 lightgray;
  border-radius:6px;
}

.small-cube-card {
  margin:1.1%;
  width:218rpx;
  display:flex;
  flex-direction:column;
  height:194rpx;
}

.small-cube-title {
  margin-left: 32rpx;
  margin-top: 16rpx;

  font-family:PingFangSC-Medium;
  font-size:28rpx;
  color:#353535;
}

.small-cube-block {
  margin-left: 32rpx;
  margin-top: 26rpx;
  margin-bottom: 30rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.small-cube-desc-unit {
  font-family:PingFangSC-Light;
  font-size:16rpx;
  color:#888888;

  margin-left: 6rpx;
}

.small-cube-desc {
  font-family:PingFangSC-Light;
  font-size:24rpx;
  color:#888888;
  letter-spacing:1.07px;
  text-align:left;
}

.small-cube-weight-value {
  font-family:PingFangSC-Medium;
  font-size:40rpx;
  color:#ff822d;
}

.article_card_container{
  display:flex;
  flex-direction: column;
  width: 686rpx;
  height: 100%;
  left:0;
  right:0;
  margin-left: auto;
  margin-right: auto;
  padding-bottom: 30rpx;
}

.horizontal_card {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.gray_text{
  font-family:PingFangSC-Regular;
  font-size:28rpx;
  color:#888888;
  text-align:left;
}

.color_bar{
  width: 98rpx;
  height: 10rpx;
  margin-left: 32rpx;
  margin-top: 30rpx;
  border-radius: 4rpx;
}

.userinfo-avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-nickname{
  color: black;
  font-size:28rpx;
  font-family:PingFangSC-Medium;
}

.frame_card {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 8rpx 32rpx;
  border:2rpx #ebebf6 solid;
  width:618rpx;
  height:122rpx;
  align-items: center;
}

.article_card {
  margin: 8rpx 32rpx;
  position: relative;
  border:2rpx #ebebf6 solid;
}

.card_date {
  font-family:PingFangSC-Light;
  font-size:22rpx;
  color:#888888;
  letter-spacing:0.2rpx;
  text-align:left;
}

.card-icon{
  width: 98rpx;
  height: 98rpx;
  margin-left: 32rpx;
  margin-right: 8rpx;
}

.side_part_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 34rpx;
}

.shadow_view {
  position: absolute;
  color: white;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: black;
  align-items: center;
  text-align: center;
  justify-content: center;
  opacity:0.35;
}

.article_card_title {
  position: absolute;
  height: 45rpx;
  padding: 25rpx;
  bottom: 0;
  word-break: true;
  font-family:PingFangSC-Regular;
  font-size:32rpx;
  color:rgba(255,255,255,0.87);
  letter-spacing:0.3rpx;
  line-height:48rpx;
  text-align:left;
}

.chart_container {
  width: 100%;
  height: 248rpx;
}

ff-canvas {
  width: 100%;
  height: 248rpx;
}

.empty-footer {
  width: 100%;
  height: 100rpx;
}

.background-pic {
  position: absolute;
  width: 100%;
  height: 100%;
}

.nextButton-container {
  color:white;
  letter-spacing: 0;
  font-family: AvenirNext-DemiBold;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 30rpx;
  background:#ed2c48;
  border-radius:10rpx;
  height: 100rpx;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}

.feedback-card-title{
  color: black;
  font-size: 18px;
  margin: 10px;
  margin-left: 16px;
  margin-top: 10px;
}

.feedback-card-desc {
  color: #888888;
  font-size: 15px;
  margin: 10px;
  margin-left: 16px;
}

.feedback-card-textarea {
  width: 90%;
  margin: 10px;
  padding: 10px;
  background-color: lightgray;
}

.phcolor {
  color: black;
}

.gray-line {
  background-color: lightgray;
  width: 100%;
  height: 1px;
  margin-top: 5px;
  margin-bottom: 5px;
}

.answer-area {
  display: flex;
  flex-direction: row;
  justify-items: center;
  justify-content: center;
}

.answer-block {
  padding: 5px;
  width: 25%;
  margin: 10px;
  text-align: center;
  background-color: #f4f4f4f4;
  border:1rpx lightgray solid;
  border-radius: 5px;
}

.answer-block-selected {
  padding: 5px;
  width: 25%;
  margin: 10px;
  text-align: center;
  color: white;
  background-color: #ed2c48;
  border:1rpx lightgray solid;
  border-radius: 5px;
}



