/* pages/feedQuestion/index.wxss */


.gray-line {
  background-color: lightgray;
  width: 100%;
  height: 1px;
  margin-top: 5px;
  margin-bottom: 5px;
}

.answer-area {
  display: flex;
  flex-direction: row;
  justify-items: center;
  justify-content: center;
}

.answer-block {
  padding: 5px;
  width: 25%;
  margin: 10px;
  text-align: center;
  background-color: #f4f4f4f4;
  border:1rpx lightgray solid;
  border-radius: 5px;
}

.answer-block-selected {
  padding: 5px;
  width: 25%;
  margin: 10px;
  text-align: center;
  color: white;
  background-color: #ed2c48;
  border:1rpx lightgray solid;
  border-radius: 5px;
}

.nextButton-container {
  color:white;
  letter-spacing: 0;
  font-family: AvenirNext-DemiBold;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 30rpx;
  background:#ed2c48;
  border-radius:10rpx;
  height: 100rpx;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}

.feedback-card-title{
  color: black;
  font-size: 18px;
  margin: 10px;
  margin-left: 16px;
  margin-top: 10px;
}

.feedback-card-desc {
  color: #888888;
  font-size: 15px;
  margin: 10px;
  margin-left: 16px;
}

.feedback-card-textarea {
  width: 90%;
  margin: 10px;
  padding: 10px;
  background-color: #f0f0f0;
  border:0.5px #979797 solid;
}

.phcolor {
  color: #878787;
}

.modal-content {
  border:1rpx #ebebf6 solid;
  margin: 10px;
}